<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp"
    android:layout_marginVertical="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <FrameLayout
            android:id="@+id/recyclerCell_frameLayout_imageLayout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">

            <ProgressBar
                android:id="@+id/recyclerCell_progressbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/recylerCell_imageView_thumbnail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="2dp"
                android:contentDescription="contentThumbnail"/>
        </FrameLayout>

        <TextView
            android:id="@+id/recyclerCell_textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/recyclerCell_frameLayout_imageLayout"
            tools:text="Name"/>
        <TextView
            android:id="@+id/recyclerCell_textView_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/recyclerCell_frameLayout_imageLayout"
            android:layout_below="@+id/recyclerCell_textView_name"
            tools:text="Description"/>


        
    </RelativeLayout>

</androidx.cardview.widget.CardView>